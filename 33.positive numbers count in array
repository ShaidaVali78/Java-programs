class Main {
    public static void main(String[] args) {
        int[] s={-1,2,-4,-6,3,0};
        int p=0;
        int n=0;
        int z=0;
        for(int i=0; i<s.length;i++) {
            if(s[i]>0) {
                p++;
            }else if(s[i]<0) {
                n++;

            }else{
                z++;
            }
           
        }
            System.out.println("positive numbers are "+p);
             System.out.println("negative numbers are "+n);
             System.out.println("zeros  are "+z);
       
    }
}
